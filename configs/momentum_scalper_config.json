{
    "_comment": "Momentum Scalper - Optimized for short timeframes (5m, 15m, 1h)",

    "strategy_name": "momentum_scalper",

    "exchange": {
        "maker_fee": 0.001,
        "taker_fee": 0.001,
        "assumed_slippage": 0.001,
        "rate_limit": 10
    },

    "trading": {
        "pairs": ["BTCINR", "ETHINR", "SOLINR", "BNBINR", "XRPINR"],
        "timeframe": "15m",
        "initial_capital": 100000,

        "risk_per_trade": 0.08,
        "max_positions": 3,
        "max_portfolio_heat": 0.20,
        "max_position_pct": 0.12,
        "max_drawdown": 0.12,

        "drawdown_warning": 0.06,
        "drawdown_critical": 0.10,
        "drawdown_warning_multiplier": 0.50,
        "drawdown_critical_multiplier": 0.25,

        "consecutive_loss_limit": 3,
        "consecutive_loss_multiplier": 0.75
