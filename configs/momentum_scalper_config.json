        "atr_period": 14,
        "stop_atr_multiple": 1.0,
        "target_atr_multiple": 1.5,
        "trailing_activation": 0.5,
        "trailing_atr_multiple": 0.75,

        "adx_threshold": 20.0,
        "adx_period": 14,
        "trade_with_trend": true,

        "max_hold_bars": 20,
        "exit_on_cross": true,
        "cooldown_bars": 2,

        "allow_short": false
    },

    "tax": {
        "tax_rate": 0.30,
        "tds_rate": 0.01,
        "loss_offset_allowed": false
    },

    "backtest": {
        "data_dir": "../data",
