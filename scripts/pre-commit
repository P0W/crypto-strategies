#!/bin/sh
# Pre-commit hook for crypto-strategies
# Runs cargo fmt and clippy before allowing commit

set -e

echo "ğŸ”§ Running pre-commit checks..."

# Check if cargo is available
if ! command -v cargo &> /dev/null; then
    echo "âŒ cargo not found. Please install Rust."
    exit 1
fi

# Run cargo fmt
echo "ğŸ“ Checking formatting..."
if ! cargo fmt --all -- --check; then
    echo ""
    echo "âŒ Formatting check failed!"
    echo "   Run 'cargo fmt --all' to fix formatting issues."
    exit 1
fi
echo "âœ“ Formatting OK"

# Run clippy
echo "ğŸ” Running clippy..."
if ! cargo clippy --all-targets --all-features -- -D warnings 2>/dev/null; then
    echo ""
    echo "âŒ Clippy check failed!"
    echo "   Fix the warnings above before committing."
    exit 1
fi
echo "âœ“ Clippy OK"

echo "âœ… All pre-commit checks passed!"
