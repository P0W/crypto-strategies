#!/bin/sh
# Pre-commit hook - runs cargo fmt and clippy
set -e
echo "ğŸ”§ Pre-commit: checking fmt + clippy..."
cargo fmt --all -- --check || { echo "âŒ Run 'cargo fmt --all' to fix"; exit 1; }
cargo clippy --all-targets -- -D warnings 2>/dev/null || { echo "âŒ Fix clippy warnings"; exit 1; }
echo "âœ… OK"
